<Window
    x:Class="Synchroniser.Views.LoadingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Synchroniser.Views"
    Title="Synchroniser - Loading"
    WindowStartupLocation="CenterScreen"
    Width="300"
    Height="85"
    ResizeMode="NoResize"
    Initialized="OnWindowInitialized"
    Closing="OnWindowClosing"
>
    <Grid Margin="10">
        <ProgressBar x:Name="LoadingProgress" Minimum="0" Maximum="100" />
        <Label x:Name="LoadingLabel" Content="Please wait..." VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
    </Grid>
</Window>
